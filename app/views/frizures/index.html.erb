<p id="notice"><%= notice %></p>

<h1>Frizures</h1>

<table>
  <thead>
    <tr>
      <th>Tip</th>
      <th>Cijena</th>
      <th>Opis</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @frizures.each do |frizure| %>
      <tr>
        <td><%= frizure.tip %></td>
        <td><%= frizure.cijena %></td>
        <td><%= frizure.opis %></td>
        <td><button type="button" class="btn btn-warning"><%= link_to 'Show', frizure %></button></td>
        <td><%= link_to 'Edit', edit_frizure_path(frizure) %></td>
        <td><%= link_to 'Destroy', frizure, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Frizure', new_frizure_path %>
